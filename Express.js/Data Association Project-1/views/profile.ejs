<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen relative bg-zinc-900 text-white p-10">
      <a
        class="px-4 py-2 absolute right-0 inline-block mr-12 bg-orange-500 font-semibold text-sm rounded-md inline-block"
        href="/"
        >Home</a
      >
      <h3 class="text-4xl text-center mb-10">Profile</h3>
      <div class="flex items-start justify-between mb-10 gap-3">
        <div class="text flex items-start gap-3">
          <div class="w-10 h-10 rounded-full overflow-hidden">
            <img
              class="w-full h-full"
              src="../public/images/uploads/<%= user.profilepic %>"
              alt=""
            />
          </div>
          <h1 class="font-light text-3xl">Hello <%= user.name %>üëãüèª</h1>
        </div>
        <a
          class="px-4 py-2 bg-red-600 text-sm rounded-md font-semibold inline-block"
          href="/logout"
          >Logout</a
        >
      </div>
      <h5>You Can Create A Post.</h5>
      <form action="/post" method="post">
        <textarea
          class="w-1/3 rounded-md resize-none bg-transparent border-2 border-zinc-700 px-6 py-8 mb-3 mt-3"
          placeholder="What's on your mind ?"
          name="content"
          id=""
        ></textarea>
        <input
          class="w-40 block bg-sky-800 px-3 text-sm py-2 rounded-md"
          type="submit"
          value="Create A Post"
        />
      </form>
      <div class="">
        <h4 class="text-zinc-500 font-semibold text-center mb-5 block">
          Your Post's
        </h4>
        <div
          class="posts-container mt-5 flex flex-wrap gap-4 justify-center items-center"
        >
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="post w-1/3 mb-4 mt-3 p-4 border-2 border-zinc-700 bg-zinc-800 rounded-md bg-transparent"
          >
            <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
            <p class="text-sm text-zinc-400 traking-tight"><%=post.content%></p>
            <small class="mt-2 inline-block">
              <%= post.likes.length %> likes
            </small>
            <div class="btns flex mt-5 gap-4">
              <a class="text-blue-500" href="/like/<%=post._id %>">
                <%= post.likes.indexOf(user._id) ===-1 ? "like" : "unlike" %>
              </a>
              <a class="text-blue-500" href="/edit/<%=post._id %>">edit</a>
              <a class="text-red-500" href="/delete/<%=post._id %>">delete</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
