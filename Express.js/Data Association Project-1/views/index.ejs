<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <a class="px-3 py-2 bg-zinc-800 text-white mb-4 rounded-full inline-block" href="/login">Login</a>
      <h3 class="text-4xl mb-10">Create Account</h3>
      <form action="/register" method="post">
        <input
          class="px-8 py-2 rounded-md outline-none border-2 border-zinc-600 bg-zinc-800 mb-4 mr-3"
          type="text"
          placeholder="username"
          name="username"
        />

        <input
          class="px-8 py-2 rounded-md outline-none border-2 border-zinc-600 bg-zinc-800 mb-4 mr-3"
          type="text"
          placeholder="name"
          name="name"
        />

        <input
          class="px-8 py-2 rounded-md outline-none border-2 border-zinc-600 bg-zinc-800 mb-4 mr-3"
          type="password"
          placeholder="password"
          name="password"
        />

        <input
          class="px-8 py-2 rounded-md outline-none border-2 border-zinc-600 bg-zinc-800 mb-4 mr-3"
          type="email"
          placeholder="email"
          name="email"
        />

        <input
          class="px-8 py-2 rounded-md outline-none border-2 border-zinc-600 bg-zinc-800 mb-4 mr-3"
          type="number"
          placeholder="age"
          name="age"
        />

        <input
          class="px-3 py-2 bg-blue-700 rounded-full font-semibold"
          type="submit"
          value="Create Account"
        />
      </form>
    </div>
  </body>
</html>
