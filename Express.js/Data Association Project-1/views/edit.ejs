<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <h3 class="text-4xl text-center mb-10">Profile</h3>
      <h5>Edit A Post.</h5>
      <form action="/update/<%= post._id %>" method="post">
        <textarea
          class="w-1/3 rounded-md resize-none bg-transparent border-2 border-zinc-700 px-6 py-8 mb-3 mt-3"
          placeholder="What's on your mind ?"
          name="content"
          id=""
        >
        <%= post.content %>
        </textarea>
        <input
          class="w-40 block bg-yellow-500 text-black px-3 text-sm py-2 rounded-md"
          type="submit"
          value="Update Post"
        />
      </form>
    </div>
  </body>
</html>
