<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 text-white p-20">
      <div class="form-div">
        <h1 class="text-3xl mb-5">Create User</h1>
        <form action="/create" method="POST">
          <input
            class="px-3 ml-2 mb-3 py-2 rounded-md border-2 border-zinc-800 bg-transparent"
            type="text"
            name="username"
            placeholder="username"
          />

          <input
            class="px-3 ml-2 mb-3 py-2 rounded-md border-2 border-zinc-800 bg-transparent"
            type="email"
            name="email"
            placeholder="email"
          />

          <input
            class="px-3 ml-2 mb-3 py-2 rounded-md border-2 border-zinc-800 bg-transparent"
            type="number"
            name="age"
            placeholder="age"
          />

          <input
            class="px-3 ml-2 mb-3 py-2 rounded-md border-2 border-zinc-800 bg-transparent"
            type="password"
            name="password"
            placeholder="password"
          />

          <input
            class="px-5 ml-2 mb-3 py-2 rounded-md border-2 border-zinc-800 bg-blue-500"
            type="submit"
            name="submit"
            value="Submit"
          />
        </form>
      </div>
    </div>
  </body>
</html>
